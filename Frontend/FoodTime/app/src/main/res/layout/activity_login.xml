<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="361dp"
        android:layout_height="44dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:fontFamily="@font/capriola"
        android:text="@string/your_kitchen_awaits"
        android:textAlignment="center"
        android:textColor="@color/colorTertiary"
        android:textSize="34sp"
        android:typeface="normal"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/email"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:ems="10"
        android:fontFamily="@font/capriola"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:ems="10"
        android:fontFamily="@font/capriola"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <RadioGroup
        android:id="@+id/userRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/childRoleBtn"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="Child"
            android:textColor="@color/colorSecondary" />

        <RadioButton
            android:id="@+id/parentRadioBtn"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="Parent"
            android:textColor="@color/colorSecondary" />

        <RadioButton
            android:id="@+id/adminRoleBtn"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="Family Admin"
            android:textColor="@color/colorSecondary" />
    </RadioGroup>

    <EditText
        android:id="@+id/parentUsername"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:ems="10"
        android:fontFamily="@font/capriola"
        android:hint="Parent Username"
        android:inputType="text" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="216dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/colorSecondary"
        android:fontFamily="@font/capriola"
        android:text="@string/create_an_account" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="216dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorSecondary"
        android:fontFamily="@font/capriola"
        android:text="@string/login" />

</androidx.appcompat.widget.LinearLayoutCompat>